digraph
{
graph [rankdir="LR"]
node [style="filled"]

/* Module nodes */
<% @graph.each_module do |node| %>
<%= node.stamp 'code_node/node.dot' %>
<% end %>

/* Class nodes */
<% @graph.each_class do |node| %>
<%= node.stamp 'code_node/node.dot' %>
<% end %>

/* A contains B */
edge [color="#e8e8e8"];
<% @graph.each_containment do |a, b| %>
<%= a.key %> -> <%= b.key %>;
<% end %>

/* A inherits from B */
edge [color="#996633"];
<% @graph.each_inheritance do |a, b| %>
<%= a.key %> -> <%= b.key %>;
<% end %>

/* A includes B */
edge [color="#336699"];
<% @graph.each_inclusion do |a, b| %>
<%= a.key %> -> <%= b.key %>;
<% end %>

/* A extends B */
edge [color="#000000"];
<% @graph.each_extension do |a, b| %>
<%= a.key %> -> <%= b.key %>;
<% end %>

}
